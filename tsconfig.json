{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@pages/*": ["pages/*"],
      "@steps/*": ["src/steps/*"],
      "@support/*": ["src/support/*"],
      "@utils/*": ["utils/*"],
      "@fixtures/*": ["fixtures/*"]
    },
    "types": ["node"],
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist"
  },
  "include": [
    "src/**/*.ts",
    "pages/**/*.ts",
    "utils/**/*.ts",
    "features/**/*.ts",
    "fixtures/**/*.ts"
  ]
}
